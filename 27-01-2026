install.packages("rayshader")
install.packages("av")
gpa<-c(8.8,5.2,3.9,6.1,9.2,7.7)
atten<-c(90,95,40,81,95,80)
study<-c(5.5,4,2,3,6,5)
student_data<-data.frame(gpa,atten,study)
setwd("C:\\Users\\Dell\\Desktop\\Data for R\\task(27-1-26)")
library(ggplot2)
library(rayshader)
library(av)
R1<-ggplot(data=student_data)
R1<-R1+aes(x=atten,y=gpa,color=study)
R1<-R1+geom_point(size=5)+scale_color_gradient(low="pink",high="purple")
plot_gg(R1)
render_movie("plot1.gif")
