setwd("C:\\Users\\Dell\\Desktop\\Data for R")
data3<-read.csv("22-01-2026 task-2.csv")
head (data3)
library(ggplot2)
library(gganimate)
library(gifski)
p<-ggplot(data=data3)
p<-p+aes(x=year,y=inflation)
p<-p+geom_line(linewidth=2,aes(color=inflation))+scale_color_gradient(low="pink",high="blue")
p_ani<-p+transition_reveal(year)
animate(p_ani,fps=112,renderer=gifski_renderer())
